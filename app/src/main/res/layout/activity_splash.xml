<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bottombarrenk"
    tools:context="com.burakekmen.gurmeapp.ui.activitys.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activity_splash_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="140dp"
            app:srcCompat="@drawable/logo" />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/activity_splash_loadingAnimation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-60dp"
            android:visibility="visible"
            app:indicatorColor="@color/color_gPlus"
            app:indicatorName="SemiCircleSpinIndicator" />

        <Button
            android:id="@+id/activity_splash_btnKontrol"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="150dp"
            android:background="@color/beyaz"
            android:text="TEKRAR DENE"
            android:textColor="@color/color_gPlus"
            android:textSize="30sp"
            android:visibility="invisible" />
    </LinearLayout>

</FrameLayout>
